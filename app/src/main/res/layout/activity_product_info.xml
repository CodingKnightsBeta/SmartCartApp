<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductInfoActivity">

<!--    <androidx.cardview.widget.CardView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="300dp"-->
<!--        android:layout_margin="30dp"-->
<!--        >-->
    <RelativeLayout
        android:id="@+id/relative_product_detail_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        >


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/product_details_image"
            android:scaleType="centerCrop"
            android:src="@drawable/cart"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/product_details_name"
            android:layout_below="@+id/product_details_image"
            android:text="ProductName"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:textSize="30sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/product_details_price"
            android:layout_below="@+id/product_details_name"
            android:text="Product Price"
            android:textStyle="bold"
            android:textSize="25sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/product_details_description"
            android:layout_marginTop="30dp"
            android:padding="20dp"
            android:text="Product description"
            android:textStyle="italic"
            android:textSize="25sp"
            android:layout_below="@+id/product_details_price"
            />
    </RelativeLayout>

    <Button
        android:id="@+id/add_to_list_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorPrimary"
        android:layout_margin="20dp"
        android:gravity="center"
        android:layout_below="@+id/relative_product_detail_1"
        android:text="Add to List"
        android:textSize="20dp"
        />

<!--    </androidx.cardview.widget.CardView>-->

</RelativeLayout>